{% extends 'base.html.twig' %}

{% block title %}Hello OrdinateurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Listes des ordinateurs</h1>
    <a href="{{ path('app_ordinateur_add') }}"><button>Ajout</button></a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Statut</th>
                <th scope="col">Ecrans</th>
                <th scope="col">Souris</th>
                <th scope="col">Tour</th>
                <th scope="col">Claviers</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ordinateur in ordinateurs %}
            <tr>
                <td>{{ ordinateur.nom }}</td>
                <td>{{ ordinateur.statut }}</td>
                <td>{% for ecran in ordinateur.ecrans %}{{ ecran }} {% endfor %}</td>
                <td>{{ ordinateur.souris.nom }}</td>
                <td>{{ ordinateur.tour.nom }}</td>
                <td>{{ ordinateur.clavier.nom }}</td>
                <td>
                    <a href="{{ path('app_ordinateur_detail', {'id': ordinateur.id}) }}">Afficher</a>
                    <a href="{{ path('app_ordinateur_edit', {'id': ordinateur.id}) }}">Editer</a>
                    <form action="{{ path('app_ordinateur_delete', {'id': ordinateur.id}) }}" method="post">
                        <input type="submit" value="Supprimer">
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8">Aucun ordinateur trouv√©</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
