{% extends 'base.html.twig' %}

{% block title %}Hello OrdinateurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Detail de l'ordinateur</h1>
    <a href="{{ path('app_ordinateur') }}">Liste des ordinateurs</a>
    <p>Id : {{ ordinateur.id }}</p>
    <p>Nom : {{ ordinateur.nom }}</p>
    <p>Tour : {{ ordinateur.tour }}</p>
    <p>Clavier : {{ ordinateur.clavier }}</p>
    <p>Souris : {{ ordinateur.souris }}</p>
</div>
{% endblock %}
